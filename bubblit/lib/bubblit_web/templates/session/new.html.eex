
<div class="login-page">
  <div class='card login-card'>
    <div class='card-content'>
    <h1 class="login-title">BubbLIT</h1>
        <%= form_for @conn, Routes.session_path(@conn, :new), [as: :session, class: "login-form ui"], fn f -> %>
          <div class="login-input">
          <font> Your Name </font>
          <%= text_input f, :name, placeholder: "name" %>
          </div>
          <div class="login-input">
          <font> Your Password </font>
          <%= password_input f, :password, placeholder: "Password" %></div>
          <div class="login-button"><%= submit "Login", class: "ui massive button login-button" %></div>
          <div class="login-button"><%= link "Register", to: Routes.user_path(@conn, :new), class: "ui massive button login-button" %></div>
        <% end %>
    </div>
    <p class="alert alert-info login-screen-message-info" role="alert"><%= get_flash(@conn, :info) %></p>
    <p class="alert alert-alert login-screen-message-alert" role="alert"><%= get_flash(@conn, :error) %></p>
  </div>

</div>

